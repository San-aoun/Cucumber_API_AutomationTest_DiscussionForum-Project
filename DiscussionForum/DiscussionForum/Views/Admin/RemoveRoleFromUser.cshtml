@model DiscussionForum.ViewModel.RemoveRoleFromUserViewModel
@{
    ViewData["Title"] = "Remove Role";
}

<h2 class="alert alert-danger">Remove role the user : @Model.Email</h2>
<form asp-controller="Admin" asp-action="RemoveRoleFromUser">
    <input asp-for="UserId" type="hidden" />
    <h2>Role available :</h2>
    @{
        string[] userRole = Model.Roles.Split(',');
        <ul>
            @foreach (var item in userRole)
            {
                <li>@item</li>
            }
        </ul>
    }

    <input type="submit" value="Remove" class="btn btn-danger" />
</form>