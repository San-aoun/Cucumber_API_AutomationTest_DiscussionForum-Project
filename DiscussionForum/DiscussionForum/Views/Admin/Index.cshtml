@model List<DiscussionForum.ViewModel.UserRolesViewModel>
@{
    ViewData["Title"] = "Admin Page";
}
<h3 class="alert alert-primary">User lists</h3>
<a asp-controller="Admin" asp-action="Create">Add new user</a>
<table class="table table-striped">
    <tr>
        <th>Email</th>
        <th>Fullname</th>
        <th>CurrentRole</th>
        <th></th>
    </tr>

    @if (Model == null)
    {
        <tr>
            <td colspan="3">Emtry User</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.Fullname</td>
                <td>@string.Join(",",item.Roles.ToList())</td>
                <td>
                    <a asp-controller="Admin"
                    asp-action="AddRoleToUser"
                    asp-route-id="@item.UserId"> Add New Role</a>
                </td>
            </tr>
        }
    }
</table>

