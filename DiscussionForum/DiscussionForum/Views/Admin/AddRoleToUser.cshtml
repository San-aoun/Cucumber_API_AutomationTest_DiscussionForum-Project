@model DiscussionForum.ViewModel.AddRoleToUserViewModelcs
@{
    ViewData["Title"] = "Add New Role";
}

<h2 class="alert alert-danger">Add New Role to : @Model.Email</h2>
<form asp-controller="Admin" asp-action="AddRoleToUser">
    <div asp-validation-summary="All" class="text-danger" />
    <input asp-for="UserId" type="hidden" />
    <select asp-for="NewRole" asp-items="Model.Roles"></select>
    <input type="submit" value="Save" class="btn btn-success" />
</form>
