@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "System Role";
}

<h3 class="alert alert-primary">System Role</h3>
<a asp-controller="Role" asp-action="Create">Add new role</a>
<table class="table table-striped table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
    </tr>

    @if (Model == null)
    {
        <tr>
            <td colspan="2">Empty role</td>
        </tr>
    }
    else
    {
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
    }
</table>
