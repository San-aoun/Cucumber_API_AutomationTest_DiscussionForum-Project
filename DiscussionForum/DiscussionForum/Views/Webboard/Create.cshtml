<h4>New Topic</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DiscussionTopic" class="control-label"></label>
                    <input asp-for="DiscussionTopic" class="form-control" />
                    <span asp-validation-for="DiscussionTopic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiscussionDetails" class="control-label"></label>
                    <textarea asp-for="DiscussionDetails" rows="5" class="form-control"></textarea>
                    <span asp-validation-for="DiscussionDetails" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control"
                            asp-items="ViewBag.CategoriesLists">
                    </select>
                </div>
