@model DiscussionForum.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<h1 class="alert alert-success"> Register</h1>
@if (User.Identity.IsAuthenticated)
{    <div class="alert alert-warning">Hello!! @User.Identity.Name</div>    
}

<form asp-controller="Account" asp-action="Create">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="container">
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <label asp-for="PasswordAgain"></label>
                <input asp-for="PasswordAgain" class="form-control" />
                <span class="text-danger" asp-validation-for="PasswordAgain"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Register</button>
                <button type="button" asp-action="Index" class="btn btn-danger">Cancel</button>
            </div>
        </div>
    </div>
</form>
